@model KatFilm.Models.Film
@{
    ViewBag.Title = "Редактирование данных о фильме";
}
<div id="zag">
    <h3 class="text-center">Информация о фильме</h3>
</div>


<div id="forml" class="bg-light">

        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <div class="det">@Model.Name</div>
        </div>  
        <div class="form-group">
            <label asp-for="Regisser" class="control-label">Режиссер</label>
            <div class="det">@Model.Regisser </div>
        </div>
        <div class="form-group">
            <label asp-for="Year" class="control-label">Год выпуска</label>
            <div class="det">@Model.Year</div>
        </div>
        <div class="form-group">
            <label asp-for="Opis" class="control-label">Описание</label>
            <textarea readonly rows="5" asp-for="Opis" class="form-control" style="width:80%"></textarea>
        </div>
</div>
<div id="formr">
        <div style="margin-top:5%; margin-left:5%;"> <img src="@Url.Content(@Model.Path)"> </div>
     
</div>
<div id="avtor">данные загрузил @ViewBag.avtor</div>

