@model KatFilm.Models.Film
@{
    ViewBag.Title = "Редактирование данных о фильме";
}

<div id="zag">
   
    <h3 class="text-center">Информация о фильме</h3>
   
</div>

<form asp-antiforgery="true" asp-action="AddFile" asp-controller="Home" method="post" enctype="multipart/form-data" asp-route-id="@Model.Id">
    <div id="forml" class="bg-light">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>@Html.HiddenFor(m => m.Id)</div>
        <label>@Html.HiddenFor(m => m.AspNetUserId)</label>
        <label>@Html.HiddenFor(m => m.Path)</label>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Regisser" class="control-label">Режиссер</label>
            <input type="text" asp-for="Regisser" class="form-control" />
            <span asp-validation-for="Regisser"></span>
        </div>
        <div class="form-group">
            <label asp-for="Year" class="control-label">Год выпуска</label>
            <input type="number" asp-for="Year" class="form-control" />
            <span asp-validation-for="Year"></span>
        </div>
        <div class="form-group">
            <label asp-for="Opis" class="control-label">Описание</label>
            <textarea rows="5" cols="68" asp-for="Opis" class="form-control" style="width:80%"></textarea>
        </div>
    </div>
    <div id="formr">
        <div style="margin-top:2%; margin-left:5%;"> <img src="@Url.Content(@Model.Path)"> </div>
        <div style="margin-left:5%">
            <input type="file" name="uploadedFile" accept=".jpg, .jpeg, .png" style="color: transparent;"><br>
        </div>
    </div>
    <div id="save">
        <input type="submit" value="Сохранить" />
    </div>
    <div id="avtor">данные загрузил @ViewBag.avtor</div>

</form>
@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}