@model KatFilm.ViewModels.LoginViewModel

<h2>Вход в приложение</h2>
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" style="background:#d3d1d1" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" style="background:#d3d1d1" />
        <span asp-validation-for="Password"></span>
    </div>
  
    <div style="margin-top:10px">
        <input type="submit" value="Войти" />
    </div>
</form>
<li class="nav-item">
      <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ForgotPassword">Забыли пароль?</a>
</li>